#!/bin/zsh

mkdir -p ~/.config/

git submodule init
git submodule update

mkdir -p .vim/autoload .vim/bundle 
curl -LSso ~/.vim/autoload/pathogen.vim https://tpo.pe/pathogen.vim

ln -s $PWD/.zshrc ~/
ln -s $PWD/.zshenv ~/
ln -s $PWD/.oh-my-zsh ~/
ln -s $PWD/.gitconfig ~/
ln -s $PWD/.tmux.conf ~/
ln -s $PWD/.vimrc ~/
ln -s $PWD/.vim ~/.vim
ln -s $PWD/.Xdefaults ~/
ln -s $PWD/awesome ~/.config/

source "$HOME/.zshrc"

tmux source-file "$HOME/.tmux.conf"
